        public static async Task<T> WithRetry<T>(Func<Task<T>> func, int retries = RetriesCount) {
            Exception ex = null;

            foreach (var i in Enumerable.Range(1, retries)) {
                try {
                    return await func();
                } catch (Exception e) /*when ( i < retries)*/ {
                    if (ex == null)
                        ex = e;
                }
            }

            return await Task.FromException<T>(ex);
        }
    }
}